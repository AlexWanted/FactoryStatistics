<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

    <android.support.constraint.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36"/>

    <android.support.constraint.Guideline
        android:id="@+id/card_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34"/>

    <android.support.constraint.Guideline
        android:id="@+id/text_start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/text_end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/text_center_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/text_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/text_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <android.support.constraint.Guideline
        android:id="@+id/second_text_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <android.support.constraint.Guideline
        android:id="@+id/second_text_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/header_gradient"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline" />

    <android.support.constraint.Guideline
        android:id="@+id/settings_start_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.89"/>
    <android.support.constraint.Guideline
        android:id="@+id/settings_end_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98"/>
    <android.support.constraint.Guideline
        android:id="@+id/settings_top_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>
    <android.support.constraint.Guideline
        android:id="@+id/settings_bottom_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>
    <ImageView
        android:id="@+id/settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_settings"
        android:background="?selectableItemBackground"
        app:layout_constraintStart_toStartOf="@+id/settings_start_guide"
        app:layout_constraintEnd_toEndOf="@+id/settings_end_guide"
        app:layout_constraintTop_toTopOf="@+id/settings_top_guide"
        app:layout_constraintBottom_toBottomOf="@+id/settings_bottom_guide"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/text_start_guideline"
        app:layout_constraintEnd_toEndOf="@+id/text_end_guideline"
        app:layout_constraintTop_toTopOf="@+id/text_top_guideline"
        app:layout_constraintBottom_toBottomOf="@+id/text_bottom_guideline"
        android:weightSum="5">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="За сутки"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="@android:color/white"
            app:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="4sp" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/by_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="0 тонн"
            android:maxLines="1"
            android:textColor="@android:color/white"
            app:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="4sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/text_start_guideline"
        app:layout_constraintEnd_toEndOf="@+id/text_center_guideline"
        app:layout_constraintTop_toTopOf="@+id/second_text_top_guideline"
        app:layout_constraintBottom_toBottomOf="@+id/second_text_bottom_guideline"
        android:weightSum="4">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_weight="3"
            android:gravity="end"
            android:text="За смену"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="@android:color/white"
            app:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="2sp" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/by_working_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="0 тонн"
            android:maxLines="1"
            android:textColor="@android:color/white"
            app:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="2sp" />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="#cacaca"
        app:layout_constraintStart_toStartOf="@+id/text_center_guideline"
        app:layout_constraintEnd_toEndOf="@+id/text_center_guideline"
        app:layout_constraintTop_toTopOf="@+id/second_text_top_guideline"
        app:layout_constraintBottom_toBottomOf="@+id/second_text_bottom_guideline"/>

    <LinearLayout
        android:id="@+id/cards"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/text_center_guideline"
        app:layout_constraintEnd_toEndOf="@+id/text_end_guideline"
        app:layout_constraintTop_toTopOf="@+id/second_text_top_guideline"
        app:layout_constraintBottom_toBottomOf="@+id/second_text_bottom_guideline"
        android:weightSum="4">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_weight="3"
            android:gravity="start"
            android:text="За прошлую"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="@android:color/white"
            app:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="2sp" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/by_previous_working_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="0 тонн"
            android:maxLines="1"
            android:textColor="@android:color/white"
            app:autoSizeTextType="uniform"
            app:autoSizeStepGranularity="2sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/second_text_bottom_guideline">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@android:color/white"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardCornerRadius="12dp">

            <ru.seveks.factorystatistics.GraphView
                android:id="@+id/graph"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                app:bar="@drawable/header_gradient"
                app:barPaddingBottom="5dp"
                app:barPaddingLeft="2dp"
                app:barPaddingRight="2dp"
                app:barPaddingTop="5dp"
                app:textSize="10sp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@android:color/white"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardCornerRadius="12dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>